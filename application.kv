<Journal>:
	BoxLayout:
		orientation: 'vertical'

        TextInput:
			id: input
			on_text: 'test'
		Button:
			size_hint: 1, 0.1
			text: 'Save Input'
			on_release: root.print_input_text()

<Character>:
	BoxLayout:
		orientation: 'vertical'

		Label:
			id:str
			text_size: self.size
			padding_x: 5
			text: 'Strength:' + root.fetch_stat("str")
			color: 1,0,0,1

		Label:
			id:end
			text_size: self.size
			padding_x: 5
			text: 'Endurance:' + root.fetch_stat("end")
			color: 1,0,0,1

		Label:
			id:int
			text_size: self.size
			padding_x: 5
			text: 'Intelligence:' + root.fetch_stat("int")
			color: 1,0,0,1

		Label:
			id:spt
			text_size: self.size
			padding_x: 5
			text: 'Spirit:' + root.fetch_stat("spt")
			color: 1,0,0,1

			



			

